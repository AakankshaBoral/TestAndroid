<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.myapplication.activities.Owner_todo">

    <LinearLayout
        android:paddingTop="100dp"
        android:gravity="center_vertical"
        android:weightSum="4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:layout_width="match_parent"
        android:id="@+id/menuentry"
        android:layout_height="wrap_content"
        android:text="Menu Entry"
        android:textColor="@color/Black"
        android:layout_weight="1"
        android:textSize="25dp"
        android:onClick="menu_entry"/>




    <Button
        android:id="@+id/menuelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu List"
        android:textColor="@color/Black"
        android:layout_weight="1"
        android:textSize="25dp"
        android:onClick="show_menu_list"/>



    </LinearLayout>

</LinearLayout>
