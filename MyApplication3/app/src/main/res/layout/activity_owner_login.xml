<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.hotel_management.Owner_login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/emaillayout"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="25dp"
                android:textColor="@color/Black"
                android:id="@+id/emailtxtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email ID"/>

            <EditText
                android:textSize="10dp"
                android:hint="Email Id"
                android:id="@+id/emaileditview"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/passwordtextview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:textSize="25dp"
                android:text="Password"/>
            <EditText
                android:hint="Password"
                android:id="@+id/passwordedittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"

                />

            <Button android:id="@+id/btnlogin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:textSize="25dp"
                    android:text="Login"
                    android:onClick="goto_ownertodo"/>

            <TextView android:id="@+id/registertextview"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="40dip"
                      android:layout_marginBottom="40dip"
                      android:text="New to Le Cafe Gourmand? Register first"
                      android:gravity="center"
                      android:textSize="25dip"
                      android:textColor="@color/NavyBlue"/>

            <Button android:id="@+id/btnregister"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:textSize="25dp"
                    android:text="Register"
                    android:onClick="owner_registration"/>



        </LinearLayout>




    </ScrollView>



</LinearLayout>
