<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.trata_group_assignment.Edit">

    <TextView
        android:textColor="@color/Black"
        android:text="First Name"
        android:textSize="25dp"
        android:id="@+id/edit_firstname_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:textColor="@color/Black"
        android:textSize="25dp"
        android:id="@+id/edit_firstname_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/Black"
        android:text="Last Name"
        android:textSize="25dp"
        android:id="@+id/edit_lastname_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:textColor="@color/Black"
        android:textSize="25dp"
        android:id="@+id/edit_lastname_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:textColor="@color/Black"
        android:text="Date Of Birth"
        android:textSize="25dp"
        android:id="@+id/edit_dob_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:textColor="@color/Black"
        android:textSize="25dp"
        android:id="@+id/edit_dob_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:textColor="@color/Black"
        android:text="Gender"
        android:textSize="25dp"
        android:id="@+id/edit_gender_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:textColor="@color/Black"
        android:textSize="25dp"
        android:id="@+id/edit_gender_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:textColor="@color/Black"
        android:textSize="25dp"
        android:text="Update"
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
